<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.gerardogandeaga.cyberlock.Activitys.Activities.Login.LoginActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/Input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="100%">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_graphic_login"
            android:layout_above="@+id/Inputs"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/Inputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/input1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:checked="false"
                android:contextClickable="false"
                app:buttonTint="@android:color/white"/>

            <RadioButton
                android:id="@+id/input2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                app:buttonTint="@android:color/white"/>

            <RadioButton
                android:id="@+id/input3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:buttonTint="@android:color/white"/>

            <RadioButton
                android:id="@+id/input4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:buttonTint="@android:color/white"/>

        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/Keypad"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue_dark"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="100%">

        <LinearLayout
            android:id="@+id/Row1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="100%">

            <Button
                android:id="@+id/btn1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Row2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Row1"
            android:orientation="horizontal"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="100%">

            <Button
                android:id="@+id/btn4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn1"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/btn4"
                android:layout_alignBottom="@+id/btn4"
                android:layout_toEndOf="@+id/btn4"
                android:layout_toRightOf="@+id/btn4"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/btn5"
                android:layout_alignBottom="@+id/btn5"
                android:layout_toEndOf="@+id/btn5"
                android:layout_toRightOf="@+id/btn5"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Row3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Row2"
            android:orientation="horizontal"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="100%">

            <Button
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn4"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/btn6"
                android:layout_toEndOf="@+id/btn7"
                android:layout_toRightOf="@+id/btn7"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/btn8"
                android:layout_alignBottom="@+id/btn8"
                android:layout_toEndOf="@+id/btn8"
                android:layout_toRightOf="@+id/btn8"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Row4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            app:layout_heightPercent="25%"
            app:layout_widthPercent="66.6%">

            <Button
                android:id="@+id/btn0"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/btnDelete"
                android:layout_alignBottom="@+id/btnDelete"
                android:layout_toEndOf="@+id/btnDelete"
                android:layout_toRightOf="@+id/btnDelete"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:fontFamily="monospace"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btnBackspace"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@color/blue_dark"
                app:srcCompat="@drawable/ic_action_backspace"/>

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
