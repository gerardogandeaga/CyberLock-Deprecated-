<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue4C_2D"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/Data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:background="@color/grayD9">

        <LinearLayout
            android:id="@+id/layoutHigherData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/etTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appbar"
                android:layout_margin="0dp"
                android:background="@color/gray8F"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Label..."
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="Last Updated: -- --"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/layoutMainData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/etTag"
                android:layout_margin="20dp"
                android:background="@drawable/gray_dark_curved"
                android:orientation="vertical"
                android:padding="5dp">

                <EditText
                    android:id="@+id/etUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/etEmail"
                    android:layout_alignBottom="@+id/etEmail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="URL"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/etTag"
                    android:layout_alignStart="@+id/etTag"
                    android:layout_below="@+id/etEmail"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Username"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/etUsername"
                    android:layout_alignBottom="@+id/etUsername"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Password"
                    android:inputType="textVisiblePassword"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

            </LinearLayout>

            <ScrollView
                android:id="@+id/TextData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/grayB4"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Notes..."
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    />
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>