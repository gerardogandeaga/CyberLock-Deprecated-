<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.gerardogandeaga.cyberlock.Activitys.Activities.Main.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:background="@color/blue_dark">

        <LinearLayout
            android:id="@+id/VerticalLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/Memo"
            android:layout_toLeftOf="@+id/Payment"
            android:layout_toRightOf="@+id/Memo"
            android:background="@color/colorAccent"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Memo"
            android:background="@color/colorAccent"
            android:orientation="horizontal">
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Memo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="50%">

            <RelativeLayout
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_darker"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imgMemoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_action_memolock"/>

                    <TextView
                        android:id="@+id/tvMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imgMemoIcon"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Memo Lock"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/Memo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/Memo"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_darker"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imgMemoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_action_cardlock"/>

                    <TextView
                        android:id="@+id/tvCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imgMemoIcon"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Card Lock"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Memo"
            android:layout_toLeftOf="@+id/Payment"
            android:layout_toStartOf="@+id/Payment"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_darker"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imgMemoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_action_loginlock"/>

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imgMemoIcon"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Login Lock"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/Login"
            android:layout_toEndOf="@+id/Memo"
            android:layout_toRightOf="@+id/Memo"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/Data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_darker"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Anchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imgMemoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/ic_action_gallerylock"/>

                    <TextView
                        android:id="@+id/tvGallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imgMemoIcon"
                        android:layout_margin="10dp"
                        android:fontFamily="monospace"
                        android:text="Photo Lock"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>


</android.support.percent.PercentRelativeLayout>
