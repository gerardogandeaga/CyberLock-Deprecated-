<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.AppBarOverlay"
    tools:context=".Activitys.Activities.Main.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/percentRelativeLayout"
            android:layout_below="@+id/appbar"
            app:layout_heightPercent="35%"
            app:layout_widthPercent="100%">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/main_wallpaper"/>

        </android.support.percent.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/Anchor"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/percentRelativeLayout"
            android:background="@color/blue4C_2D"
            android:orientation="horizontal">
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_above="@+id/Actions"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Anchor"
            android:background="@color/blue2D_3D">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_widthPercent="50%">

                <RelativeLayout
                    android:id="@+id/Memo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_background_main"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imgMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvMemo"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_action_memolock"/>

                    <TextView
                        android:id="@+id/tvMemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="serif-monospace"
                        android:paddingBottom="10dp"
                        android:text="Memo Lock"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/PaymentInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_background_main"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imgPaymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvPaymentInfo"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_action_cardlock"/>

                    <TextView
                        android:id="@+id/tvPaymentInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="serif-monospace"
                        android:paddingBottom="10dp"
                        android:text="Card Lock"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                app:layout_widthPercent="50%">

                <RelativeLayout
                    android:id="@+id/LoginInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_background_main"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imgLoginInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvLoginInfo"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_action_loginlock"/>

                    <TextView
                        android:id="@+id/tvLoginInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="serif-monospace"
                        android:paddingBottom="10dp"
                        android:text="Login Lock"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/clickable_background_main"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imgPlayground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_action_playground"
                        android:layout_above="@+id/tvPlayground"/>

                    <TextView
                        android:id="@+id/tvPlayground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="serif-monospace"
                        android:paddingBottom="10dp"
                        android:text="Playground"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/Actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/blue4C_2D"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/clickable_background_main"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_action_rate"/>

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/clickable_background_main"
                android:clickable="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_action_share"/>

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/NavigationContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/grayD9">

        <include
            layout="@layout/drawer_update_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
