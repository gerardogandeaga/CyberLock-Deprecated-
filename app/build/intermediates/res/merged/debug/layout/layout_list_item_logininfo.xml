<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_background_listitem"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/ic_action_trash"/>

    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgDelete"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/gray8F"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Label..."
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/grayB4"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Url"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/grayB4"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Username"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/grayB4"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Email"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/grayB4"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Password"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnEdit"
            android:layout_toLeftOf="@+id/tvDate"
            android:layout_toRightOf="@+id/btnEdit"
            android:background="@color/grayB4"
            android:fontFamily="monospace"
            android:padding="2dp"
            android:text="Notes"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvLabel"
            android:background="@color/grayD9"
            android:gravity="top|center_horizontal"
            android:padding="2dp"
            android:paddingRight="0dp"
            android:text="date"
            />
    </LinearLayout>

</RelativeLayout>