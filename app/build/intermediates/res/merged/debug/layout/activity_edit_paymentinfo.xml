<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/Content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/Data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayD9"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:id="@+id/MainCardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutTag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray8F"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Label..."
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="Last Updated: N/A"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layoutTag"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gray_dark_curved"
                android:orientation="vertical"
                android:padding="5dp">

                <EditText
                    android:id="@+id/etCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Card Holder Name"
                    android:inputType="textPersonName"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Card Number"
                    android:inputType="number"
                    android:maxLength="25"
                    android:textSize="18sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvEXPIRYDATE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etCardExpire"
                        android:layout_alignBottom="@+id/etCardExpire"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:fontFamily="monospace"
                        android:text="Expiry Date [ MM/YY ] "
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etCardExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/tvEXPIRYDATE"
                        android:layout_toRightOf="@+id/tvEXPIRYDATE"
                        android:ems="10"
                        android:fontFamily="monospace"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textAlignment="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvSECURITYCODE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etCardSecCode"
                        android:layout_alignBottom="@+id/etCardSecCode"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/etCardSecCode"
                        android:layout_toStartOf="@+id/etCardSecCode"
                        android:fontFamily="monospace"
                        android:text="Security Code"
                        android:textAllCaps="false"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etCardSecCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/etCardExpire"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/etCardExpire"
                        android:layout_below="@+id/etCardExpire"
                        android:ems="10"
                        android:fontFamily="monospace"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textAlignment="center"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spCardSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSecurity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/etQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayB4"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Seurity Question"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray8F"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Answer"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/grayB4"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Security question"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray8F"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Answer"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="16sp"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layoutCard"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grayB4"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:gravity="top|left"
                    android:hint="Notes..."
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textAllCaps="false"/>
            </ScrollView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
