<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="180">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:useLevel="false">

        <size
            android:width="76dp"
            android:height="76dp"/>

        <gradient
            android:angle="0"
            android:endColor="@color/orangeAccent"
            android:startColor="@color/orangeAccent"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>