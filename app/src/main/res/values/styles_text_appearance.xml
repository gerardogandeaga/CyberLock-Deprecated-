<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Clearances -->
    <style name="myText.Clearance.Header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myText.Clearance.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Main Edit -->
    <style name="myText.Edit.Label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/c_gray_40</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myText.Edit.Content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/c_gray_40</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="myText.Edit.Date" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="myText.Edit.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/c_gray_50</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List Items -->
    <style name="myText.List.Label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myText.List.Content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/c_gray_70</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="myText.List.Date" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/c_green_70</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Option -->
    <style name="myText.Options.Category" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="myText.Options.Header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="myText.Options.Description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Dialog -->
    <style name="myText.Dialog.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="myText.Dialog.SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="myText.Dialog.Content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
    </style>
    <style name="myText.Dialog.Buttons" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Toast -->
    <style name="myText.Toast.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toast -->
    <style name="myText.Lib.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="myText.Lib.Author" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="myText.Lib.Description" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="myText.Lib.Url" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
    </style>
    <!-- ####################################################################################### -->
</resources>