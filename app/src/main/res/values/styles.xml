<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- primitives, do not touch!-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!---->

        <!-- customizations -->
        <!-- action bar overlay -->
        <item name="windowActionModeOverlay">true</item>

        <!-- custom specific colours -->
        <item name="transparent">@android:color/transparent</item>
        <!-- ripple -->
        <item name="accentRipple">@color/c_gray_20</item>
        <item name="maskRipple">@color/white</item>
        <!-- scrollbars -->
        <item name="scrollbarMainColour">@color/black</item>
        <item name="scrollbarPreviewColour">@color/c_gray_30</item>
        <!-- toolbar -->
        <item name="toolbarColour">@color/white</item>
        <item name="toolbarItemColour">@color/black</item>
        <item name="titleColour">@color/black</item>
        <item name="subtitleColour">@color/c_gray_80</item>
        <!-- backgrounds -->
        <item name="backgroundColour">@color/white</item>
        <!-- text -->
        <item name="android:textColorPrimary">?attr/titleColour</item>
        <item name="actionMenuTextColor">?attr/titleColour</item>

        <!-- main colours -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>


        <item name="android:actionModeCloseDrawable">@drawable/ic_back</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
    </style>

    <!-- toolbar -->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlHighlight">@color/c_gray_30</item>
        <item name="titleTextColor">?attr/titleColour</item>
        <item name="subtitleTextColor">?attr/subtitleColour</item>
    </style>

    <!-- ActionMode -->
    <!-- during action mode -> this is displayed on the action bar -->
    <style name="MyActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/MyActionModeTitle</item>
    </style>
    <style name="MyActionModeTitle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <!-- action mode title colour -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="TestTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

</resources>
