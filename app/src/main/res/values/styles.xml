<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primitives, do not touch!-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!---->

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/c_orange_70</item>
        <item name="colorPrimary">@color/c_gray_0</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColour">@color/c_gray_0</item>
        <item name="cardbackgroundColour">@color/white</item>

        <item name="tintColour">@color/black</item>

        <item name="textColourPrimary">@color/black</item>
        <item name="textColourSecondary">@color/c_green_70</item>
        <item name="textColourHint">@color/c_gray_40</item>


    </style>

    <!-- Primitives -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/c_orange_70</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColour">@color/c_gray_0</item>
        <item name="cardbackgroundColour">@color/white</item>

        <item name="tintColour">@color/black</item>

        <item name="textColourPrimary">@color/black</item>
        <item name="textColourSecondary">@color/c_green_70</item>
        <item name="textColourHint">@color/c_gray_40</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/c_orange_70</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColour">@color/c_blue_90</item>
        <item name="cardbackgroundColour">@color/c_blue_80</item>

        <item name="tintColour">@color/white</item>

        <item name="textColourPrimary">@color/white</item>
        <item name="textColourSecondary">@color/c_green_30</item>
        <item name="textColourHint">@color/c_gray_30</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attr/cardbackgroundColour</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">?attr/textColourPrimary</item>
    </style>

</resources>
