<resources>
    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primitives, do not touch!-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!---->

        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/c_blue_90</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/c_blue_90</item>
    </style>

    <!-- Edit Activity Colours -->
    <style name="OverlayPrimaryColorBlue">
        <item name="colorPrimaryDark">@color/ct_blue</item>
    </style>
    <style name="OverlayPrimaryColorRed">
        <item name="colorPrimaryDark">@color/ct_red</item>
    </style>
    <style name="OverlayPrimaryColorGreen">
        <item name="colorPrimaryDark">@color/ct_green</item>
    </style>
    <style name="OverlayPrimaryColorYellow">
        <item name="colorPrimaryDark">@color/ct_yellow</item>
    </style>
    <style name="OverlayPrimaryColorPurple">
        <item name="colorPrimaryDark">@color/ct_purple</item>
    </style>
    <style name="OverlayPrimaryColorOrange">
        <item name="colorPrimaryDark">@color/ct_orange</item>
    </style>



    <!-- Primitives -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
