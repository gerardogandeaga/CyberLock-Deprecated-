<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- primitives, do not touch!-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!---->
        
        <!-- custom colours -->
        <item name="transparent">@android:color/transparent</item>

        <item name="accentRipple">@color/c_gray_20</item>
        <item name="maskRipple">@color/white</item>

        <item name="scrollbarMainColour">@color/c_blue_30</item>
        <item name="scrollbarTaggedColour">@color/white</item>

        <item name="toolbarColour">@color/white</item>
        <item name="toolbarItemColour">@color/black</item>
        <item name="toolbarTitleColour">@color/black</item>
        <item name="toolbarSubTitleColour">@color/black</item>

        <item name="backgroundColour">@color/white</item>


        <item name="android:textColorPrimary">?attr/toolbarTitleColour</item>
        <item name="actionMenuTextColor">?attr/toolbarTitleColour</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColour">@color/c_gray_0</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/c_orange_70</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColour">@color/c_blue_90</item>

    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="MyToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">@color/c_gray_30</item>
    </style>

    <style name="MyScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarThumbVertical">?attr/scrollbarMainColour</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
