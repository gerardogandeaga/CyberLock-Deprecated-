<resources>

    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_2L</item>
        <item name="colorPrimaryDark">@color/blue_3D</item>
        <item name="colorAccent">@color/blue_2D</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="OverlaySchemeColorRed">
        <item name="colorPrimary">@color/red_2L</item>
        <item name="colorPrimaryDark">@color/red_3D</item>
        <item name="colorAccent">@color/red_2D</item>
    </style>
    <style name="OverlaySchemeColorGreen">
        <item name="colorPrimary">@color/green_2L</item>
        <item name="colorPrimaryDark">@color/green_3D</item>
        <item name="colorAccent">@color/green_2D</item>
    </style>
    <style name="OverlaySchemeColorYellow">
        <item name="colorPrimary">@color/yellow_2L</item>
        <item name="colorPrimaryDark">@color/yellow_3D</item>
        <item name="colorAccent">@color/yellow_2D</item>
    </style>
    <style name="OverlaySchemeColorPurple">
        <item name="colorPrimary">@color/purple_2L</item>
        <item name="colorPrimaryDark">@color/purple_3D</item>
        <item name="colorAccent">@color/purple_2D</item>
    </style>
    <style name="OverlaySchemeColorGray">
        <item name="colorPrimary">@color/gray_2L</item>
        <item name="colorPrimaryDark">@color/gray_3D</item>
        <item name="colorAccent">@color/gray_2D</item>
    </style>


    <!-- Navigation Drawer Color -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
