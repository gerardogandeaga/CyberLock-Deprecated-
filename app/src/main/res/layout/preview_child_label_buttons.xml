<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/background_label"
              android:elevation="3dp"
              android:orientation="horizontal"
              android:padding="5dp"
              tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/imgChildIconType"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="DATA type icon"
        app:srcCompat="@drawable/ic_file"/>

    <ImageView
        android:id="@+id/imgColourTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="colour tag"
        android:orientation="horizontal"
        android:src="@color/black">
    </ImageView>

    <TextView
        android:id="@+id/tvChildLabel"
        style="@style/myText.Edit.Label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:maxLines="1"
        android:scrollbars="horizontal"
        android:textAppearance="@style/myText.Edit.Label"/>

    <ImageButton
        android:id="@+id/btnChildDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="Done"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_cross2"/>

    <ImageButton
        android:id="@+id/btnChildEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:contentDescription="Edit"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_edit"/>

</LinearLayout>