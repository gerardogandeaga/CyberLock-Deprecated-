<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray3B"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/preview5"
        android:contentDescription="wallpaper"/>

    <LinearLayout
        android:id="@+id/InputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="1"
        android:background="@drawable/background_fill_white_border_gray"
        android:orientation="vertical"
        app:layout_marginBottomPercent="30%">

        <EditText
            android:id="@+id/etPasscode"
            style="@style/myText.Edit.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="Enter Passcode"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textAppearance="@style/myText.Settings.Header"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_gray"
            android:text="Login"
            android:textAppearance="@style/myText.Dialog.Buttons"/>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>