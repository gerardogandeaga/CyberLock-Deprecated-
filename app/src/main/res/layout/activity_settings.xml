                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="encryption method"
                    android:tint="@color/black"
                    app:srcCompat="@drawable/ic_graphic_change_encryption_method"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgEncryptionMethod"
                    android:layout_toRightOf="@+id/imgEncryptionMethod"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvEncryptionMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Encryption Method"
                        android:textAppearance="@style/myText.Settings.Header"/>

                    <Spinner
