<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_listitem"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ColourTag"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/Data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/corner_colourtags"
        android:contentDescription="colour tag"
        android:orientation="vertical">
    </ImageView>

    <LinearLayout
        android:id="@+id/Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ColourTag"
        android:layout_toRightOf="@+id/ColourTag"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/MemoListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical"
                tools:ignore="DuplicateIds,UselessParent">

                <TextView
                    android:id="@+id/tvMemoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="Label..."
                    android:textAppearance="@style/myText.List.Label"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tvMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Memo"
                    android:textAppearance="@style/myText.List.Content"/>

                <TextView
                    android:id="@+id/tvMemoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:padding="1dp"
                    android:text="date"
                    android:textAppearance="@style/myText.List.Date"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PaymentInfoListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="71dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/xml_card_image_border"
                    android:contentDescription="card icon"
                    app:srcCompat="@drawable/card_default"/>

                <LinearLayout
                    android:id="@+id/layoutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/imgCard"
                    android:layout_toStartOf="@+id/imgCard"
                    android:orientation="vertical"
                    tools:ignore="DuplicateIds">

                    <TextView
                        android:id="@+id/tvPaymentInfoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:text="Label..."
                        android:textAppearance="@style/myText.List.Label"/>

                    <TextView
                        android:id="@+id/tvCardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Card Name"
                        android:textAppearance="@style/myText.List.Content"
                        />

                    <TextView
                        android:id="@+id/tvCardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Card Number"
                        android:textAppearance="@style/myText.List.Content"
                        />

                    <TextView
                        android:id="@+id/tvPaymentInfoDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="date"
                        android:textAppearance="@style/myText.List.Date"
                        />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LoginInfoListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                tools:ignore="DuplicateIds,UselessParent">

                <TextView
                    android:id="@+id/tvLoginInfoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="Label..."
                    android:textAppearance="@style/myText.List.Label"/>

                <TextView
                    android:id="@+id/tvURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Url"
                    android:textAppearance="@style/myText.List.Content"/>

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Username"
                    android:textAppearance="@style/myText.List.Content"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Email"
                    android:textAppearance="@style/myText.List.Content"/>

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="Password"
                    android:textAppearance="@style/myText.List.Content"/>

                <TextView
                    android:id="@+id/tvLoginInfoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:padding="1dp"
                    android:text="date"
                    android:textAppearance="@style/myText.List.Date"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
