<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/Content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/clickable_background_listitem"
              android:clickable="true"
              android:orientation="vertical"
              android:padding="5dp">

    <RelativeLayout
        android:id="@+id/MemoListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgDelete"
            android:layout_toRightOf="@+id/imgDelete"
            android:clickable="false"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvMemoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/gray8F"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Label..."
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Memo"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvMemoDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabel"
                android:background="@color/grayD9"
                android:fontFamily="monospace"
                android:gravity="top|center_horizontal"
                android:padding="2dp"
                android:paddingRight="0dp"
                android:text="date"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PaymentInfoListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgDelete"
            android:layout_toRightOf="@+id/imgDelete"
            >

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="64dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/card_default"/>

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgCard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPaymentInfoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/gray8F"
                    android:fontFamily="monospace"
                    android:padding="2dp"
                    android:text="Label..."
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/grayB4"
                    android:fontFamily="monospace"
                    android:padding="2dp"
                    android:text="Card Name"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/grayB4"
                    android:fontFamily="monospace"
                    android:padding="2dp"
                    android:text="Card Number"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvPaymentInfoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvLabel"
                    android:background="@color/grayD9"
                    android:fontFamily="monospace"
                    android:padding="2dp"
                    android:text="date"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LoginInfoListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgDelete"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvLoginInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/gray8F"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Label..."
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Url"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Username"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Email"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnEdit"
                android:layout_toLeftOf="@+id/tvDate"
                android:layout_toRightOf="@+id/btnEdit"
                android:background="@color/grayB4"
                android:fontFamily="monospace"
                android:padding="2dp"
                android:text="Password"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvLoginInfoDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabel"
                android:background="@color/grayD9"
                android:fontFamily="monospace"
                android:gravity="top|center_horizontal"
                android:padding="2dp"
                android:paddingRight="0dp"
                android:text="date"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
