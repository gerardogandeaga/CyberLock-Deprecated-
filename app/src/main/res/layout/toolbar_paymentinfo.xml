<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:layout_collapseParallaxMultiplier="0"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/toolbarColour"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextColor="?attr/toolbarSubTitleColour"
            app:titleTextColor="?attr/toolbarTitleColour">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/card_default"/>

        </android.support.v7.widget.Toolbar>

        <include layout="@layout/item_divider_horizontal"/>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>