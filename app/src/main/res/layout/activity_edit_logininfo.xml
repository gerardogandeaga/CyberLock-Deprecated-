<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light2"
    android:orientation="vertical"
    tools:context="com.gerardogandeaga.cyberlock.Activitys.Activities.Main.MainEditActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/child_toolbar"/>

    <EditText
        android:id="@+id/etLabel"
        style="@style/myText.Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_label"
        android:elevation="3dp"
        android:hint="Label"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:scrollbars="horizontal"
        android:textAppearance="@style/myText.Label"/>

    <ScrollView
        android:id="@+id/Data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayD9">

        <LinearLayout
            android:id="@+id/layoutHigherData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/layoutMainData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_fill_graymid"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/etUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="URL"
                    android:inputType="text|textUri"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Username"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Email"
                    android:inputType="text|textEmailAddress|textWebEmailAddress"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Password"
                    android:inputType="text|textVisiblePassword"
                    android:textAlignment="center"
                    android:textSize="16sp"/>

            </LinearLayout>

            <ScrollView
                android:id="@+id/TextData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:hint="Notes..."
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    />
            </ScrollView>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textAppearance="@style/myText.Date"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>