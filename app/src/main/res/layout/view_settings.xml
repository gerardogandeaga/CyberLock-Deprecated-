<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.gerardogandeaga.cyberlock.Activitys.Activities.Menus.Settings">

    <RelativeLayout
        android:id="@+id/AutoSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgAutoSave"
            android:layout_toRightOf="@+id/imgAutoSave"
            android:clickable="false"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/autoSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAutoSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Auto Save"
                    android:textAppearance="@style/myText.Settings.Header"/>

                <TextView
                    android:id="@+id/tvAutoSaveDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automatically save notes without needing to select the save button"
                    android:textAppearance="@style/myText.Settings.Description"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/cbAutoSave"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/black"
                android:textSize="16sp"
                tools:targetApi="lollipop"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/AutoLogoutDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgAutoLogoutDelay"
            android:layout_toRightOf="@+id/imgAutoLogoutDelay"
            android:clickable="false"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvAutoLogoutDelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Auto Logout Delay"
                android:textAppearance="@style/myText.Settings.Header"/>

            <TextView
                android:id="@+id/tvAutoLogoutDelayDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select how long it takes for the application to automatically logout"
                android:textAppearance="@style/myText.Settings.Description"/>

            <Spinner
                android:id="@+id/spAutoLogoutDelay"
                style="@style/Platform.Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:popupBackground="@color/white"
                android:spinnerMode="dialog"
                tools:targetApi="lollipop"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ChangePasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tvChangePasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgChangePassword"
            android:layout_toRightOf="@+id/imgChangePassword"
            android:clickable="false"
            android:padding="10dp"
            android:text="Change Passcode"
            android:textAppearance="@style/myText.Settings.Header"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ScrambleKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgScrambleEncryptionKey"
            android:layout_toRightOf="@+id/imgScrambleEncryptionKey"
            android:clickable="false"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvScrambleKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scramble Encryption Key"
                android:textAppearance="@style/myText.Settings.Header"/>

            <TextView
                android:id="@+id/tvScrambleKeyDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Changes encryption key. Size is determined by algorithm selected."
                android:textAppearance="@style/myText.Settings.Description"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/EncryptionMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgEncryptionMethod"
            android:layout_toRightOf="@+id/imgEncryptionMethod"
            android:clickable="false"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvEncryptionMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Encryption Method"
                android:textAppearance="@style/myText.Settings.Header"/>

            <Spinner
                android:id="@+id/spEncryptionMethod"
                style="@style/Platform.Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:popupBackground="@color/white"
                android:spinnerMode="dialog"
                tools:targetApi="lollipop"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light2"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>






