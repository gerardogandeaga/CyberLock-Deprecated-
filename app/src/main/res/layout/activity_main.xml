<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColour"
    tools:context=".activities.core.ActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/appBar"
            layout="@layout/toolbar_main"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

            </android.support.v7.widget.RecyclerView>

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fabAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                app:menu_colorNormal="@color/tr_orange_60"
                app:menu_colorPressed="@color/tr_orange_60"
                app:menu_colorRipple="@color/tr_orange_60"
                app:menu_icon="@drawable/ic_accent_add"
                app:menu_shadowRadius="2dp"
                app:menu_shadowYOffset="1dp">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_accent_note"
                    app:fab_colorDisabled="@color/c_orange_60"
                    app:fab_colorNormal="@color/c_orange_60"
                    app:fab_colorPressed="@color/c_orange_60"
                    app:fab_colorRipple="@color/c_orange_60"
                    app:fab_label="Note"
                    app:fab_size="mini"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabPaymentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_accent_card"
                    app:fab_colorDisabled="@color/tr_orange_60"
                    app:fab_colorNormal="@color/tr_orange_60"
                    app:fab_colorPressed="@color/tr_orange_60"
                    app:fab_colorRipple="@color/tr_orange_60"
                    app:fab_label="Payment Information"
                    app:fab_size="mini"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fabLoginInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_accent_login"
                    app:fab_colorDisabled="@color/tr_orange_60"
                    app:fab_colorNormal="@color/tr_orange_60"
                    app:fab_colorPressed="@color/tr_orange_60"
                    app:fab_colorRipple="@color/tr_orange_60"
                    app:fab_label="Login Credentials"
                    app:fab_size="mini"/>

            </com.github.clans.fab.FloatingActionMenu>

        </RelativeLayout>

    </LinearLayout>

    <!--app:headerLayout="@layout/drawer_options"-->

</android.support.v4.widget.DrawerLayout>
